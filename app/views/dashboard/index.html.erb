<div class="container container-2">
<div class="row row-2">
<div class="col-sm-4 background-style3">
		<h1><%= current_user.username %></h1>

		<p id="profile_button">My Profile</p>
		<p id="notes_button">My Notes</p>
		<p id="classes_button">Saved Classes</p>
  </div>
  <div class="col-lg-8 form-spacing">
 <div id="myclasses">
<h2>Saved Classes</h2>
<p>List of Classes</p>
</div>
<div id="myprofile">
<h2>My Profile</h2>
<p><%= current_user.email %></p>
<p><%= current_user.username %></p>
<p><%= School.find(current_user.school_id).name %></p>
<a class="btn button2 btn-sm" href="/users/edit" role="button">Edit Profile</a>
</div>
<div id="mynotes">
<h2>My Notes</h2>
<div class="scroll-box">
    <ul style="list-style-type: none;">
    	<li >
			<% @user_notes.each do |note| %>
    		    <div style="margin: 15px;" class="card">
					<div class="card-header">
						<%= note.topic %>
    		    		<%= note.title %>
					</div>
    		    	<div>
    		    		<%= Course.find(note.course_id).dept %>
    		    		<%= Course.find(note.course_id).course_number %>
    		    		<%= note.text %>
    		    	</div>
    		    	<div class="card-footer">
    		    		<%= link_to 'Show', note %>
    		    		<%= link_to 'Edit', edit_note_path(note) %>
    		    		<%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %>
    		    		Created on: <%= note.date_taken %>
					</div>
				</div>
    		<% end %>
		</li>
	</ul>
</div>
<div style="margin-top: 20px;">
	<a class="btn button2 btn-sm" href="/notes/new" role="button">Create Notes</a>
</div>
</div>
</div>
</div>
<script>
	document.getElementById("profile_button").addEventListener("click", profile);
	function profile() {
		document.getElementById('myprofile').style.display="block";
		document.getElementById('myclasses').style.display="none";
		document.getElementById('mynotes').style.display="none";
	};
	document.getElementById("classes_button").addEventListener("click", classes);
	function classes() {
		document.getElementById('myclasses').style.display="block";
		document.getElementById('myprofile').style.display="none";
		document.getElementById('mynotes').style.display="none";
	};
	document.getElementById("notes_button").addEventListener("click", notes);
	function notes() {
		document.getElementById('myprofile').style.display="none";
		document.getElementById('myclasses').style.display="none";
		document.getElementById('mynotes').style.display="block";
	};
</script>
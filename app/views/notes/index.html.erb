<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Title</th>
      <th>Date taken</th>
      <th>Key takeaways</th>
      <th>Users</th>
      <th>Courses</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.topic %></td>
        <td><%= note.title %></td>
        <td><%= note.date_taken %></td>
        <td><%= note.key_takeaways %></td>
        <td><%= note.users %></td>
        <td><%= note.courses %></td>
        <td><%= note.text %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
